<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StudentEnrollment"
             x:Class="StudentEnrollment.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Palette for pleasant distinct colors -->
            <Color x:Key="Accent1">#4F46E5</Color>
            <Color x:Key="Accent2">#06B6D4</Color>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#1F2937"/>
                <Setter Property="FontFamily" Value="Calibri"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
