    <Grid x:Name="MainGrid" 
           RowDefinitions="{OnPlatform Default='0.6*,4.2*,5*', Android='2*,440,5*', iOS='2*,440,5*'}" 
           Padding="16" 
           ColumnDefinitions="*" 
           RowSpacing="8">
        
           <Grid ColumnDefinitions="{OnPlatform Default='*,auto',Android='*',iOS='*'}"
                    RowDefinitions="{OnPlatform Default='*',Android='*,*',iOS='*,*'}" 
                    Padding="2,0">
               
                <Grid ColumnDefinitions="Auto,*" 
                          ColumnSpacing="{OnPlatform Android=12, iOS=12, Default=0}">
                        
                    <Path Data="{StaticResource pathData}" 
                        Margin="{OnPlatform Default=0 16 0 0, Android=10 10 0 0}"
                        WidthRequest="50"
                        HeightRequest="50"
                        Fill="#610097"
                        VerticalOptions="Center">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="{OnPlatform Default=1.5}" 
                                            ScaleY="{OnPlatform Default=1.5}"/>
                        </Path.RenderTransform>
                    </Path>
                        
                    <Label VerticalOptions="Center" 
                            Grid.Column="1"
                            HorizontalOptions="Start" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span TextColor="#610097" Text="Zerenthia Meridian University Enrollment Dashboard," 
                                        FontSize="{OnPlatform Default=22, Android=16, iOS=16}" 
                                        FontFamily="Calibri"
                                        FontAttributes="Bold"/>
                                <Span Text=" USA" TextColor="#99610097"
                                        FontFamily="Calibri"
                                        FontSize="{OnPlatform Default=14, Android=12, iOS=12}"  />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>
               
                <Border StrokeThickness="0" 
                        Background="Transparent" 
                        Grid.Row="1"
                        Grid.Column="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                    <sfInputs:SfComboBox Grid.Column="1"
                                        Grid.Row="1"
                                        Padding="4,0"
                                        TextColor="#610097"
                                        Background="#F7D4FC"
                                        Stroke="Transparent"
                                        DropDownBackground="{OnPlatform Default='#E6AFFF', Android='#F7D4FC', iOS='#F7D4FC'}"
                                        DropDownStroke="#F7D4FC"
                                        DropDownStrokeThickness="1"
                                        DropDownIconColor="#610097"
                                        WidthRequest="{OnPlatform Default=148, Android=-1, iOS=-1}"
                                        HeightRequest="38"
                                        HorizontalOptions="{OnPlatform Default=End, Android=Fill,iOS=Fill}"
                                        VerticalOptions="Center"
                                        Placeholder="Select degree"
                                        ItemsSource="{Binding Degrees}"
                                        DisplayMemberPath="Name"
                                        IsClearButtonVisible="False"
                                        SelectedItem="{Binding SelectedDegree, Mode=TwoWay}"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1" 
                   ColumnDefinitions="{OnPlatform Default='*',WinUI='*,*',MacCatalyst='*,*'}" 
                   ColumnSpacing="8">
                
                <Grid Grid.Column="0" 
                      ColumnSpacing="8" 
                      RowSpacing="8"
                      RowDefinitions="{OnPlatform Default='*', Android='*,*',iOS='*,*'}"
                      ColumnDefinitions="{OnPlatform Default='*',WinUI='6*,4*',MacCatalyst='6*,4*'}">
                    
                    <local:AdmissionData Grid.Column="0"/>
                    
                    <local:NoticeData Grid.Column="1"  
                                      IsVisible="{OnPlatform Default=true, Android=false, iOS=false}"/>
                    
                    <local:GenderData Grid.Column="1" 
                                      Grid.Row="1" 
                                      IsVisible="{OnPlatform Default=true, WinUI=false, MacCatalyst=false}"/>
                </Grid>

                <local:GenderData Grid.Column="1" 
                                  IsVisible="{OnPlatform Default=true, Android=false, iOS=false}"/>
            </Grid>
        
            <Grid Grid.Row="2" 
                  ColumnDefinitions="{OnPlatform Default='*',WinUI='*,*',MacCatalyst='*,*'}" 
                  RowDefinitions="{OnPlatform Default='*', Android='*,*',iOS='*,*'}"
                  ColumnSpacing="8" 
                  RowSpacing="8">
                
                <local:OverallData Grid.Column="0" Grid.Row="0"/>
                
                <local:RegionData Grid.Column="1" Grid.Row="1"/>
            </Grid>
        </Grid>

